{
  "env": {
      "es6": true,
      "node": true,
      "jest": true
  },
  "extends": "eslint:recommended",
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "rules": {
      "require-atomic-updates": "off",
      "no-unused-vars": [
          2,
          {
              "vars": "all",
              "args": "after-used",
              "argsIgnorePattern": "^_",
              "varsIgnorePattern": "^_"
          }
      ]
  }
}